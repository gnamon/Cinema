<%- include('partials/header'); -%>
<div class="container-fluid">
  <div class="movies showtime">
    <ul class="nav">
      <li class="nav-item">
        <a class="nav-link active" data-target="#today" href="#">Today</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-target="#nextday" href="#">09 Oct</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-target="#nextday1" href="#">10 Oct</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-target="#nextday2" href="#">11 oct</a>
      </li>
    </ul>
    <section class="movies-list">
      <article id="today" class="active">
        <div class="row row-movie">
          <div class="col-2">
            <img
              class="poster"
              src="<%=moviesDetial.imageLink %>"
              alt="UE6T6Q.jpg"
            />
          </div>
          <div class="col col-movie">
            <div class="genres"><%= moviesDetial.genreTypeName %></div>
            <div class="rightcorner">
              <span class="lenght"><%= moviesDetial.movieLenght %></span>
              <span class="rate" style="font-size: 13px;"><%= moviesDetial.rate %></span>
            </div>
            <div class="title"><%= moviesDetial.movieName %></div>
            <div class="plot"><p><%= moviesDetial.movieDetail %></p></div>
            <div class="more-info">
              <a href="#">More Info<i class="fa fa-chevron-right"></i></a>
            </div>
            <div class="row sub">
              <div class="col">
                <% if(S2Ds != '' ){ %>
                <div class="col theater-showtime">
                  <span class="theater">2D</span>
                  <% S2Ds.forEach(function(S2D){ %>
                    <% varbuffer =  S2D.showtime.toTimeString() %>
                    <% varbuffer =  varbuffer.split(' ')[0]%>
                    <% if(currentTime >= varbuffer){ %>
                    <span class="time"><a class="disable" href="/"><%=varbuffer%></a></span>
                    <% }else{ %>
                      <span class="time"><a class="able" href="/bookingmovies/<%= moviesDetial.movieName %>/<%= moviesDetial.branchName %>/<%= S2D.theaterID%>/<%= varbuffer%>/<%= S2D.movieShowtimeID%>/2D/<%= S2D.audio%>/select"><%= varbuffer%></a></span>
                    <% } %>
                  <% }); %>
                </div>
                <% } %>

                <% if(S3Ds != '' ){ %>
                  <div class="col theater-showtime">
                    <span class="theater">3D</span>
                    <% S3Ds.forEach(function(S3D){ %>
                      <% varbuffer =  S3D.showtime.toTimeString() %>
                      <% varbuffer =  varbuffer.split(' ')[0]%>
                      <% if(currentTime >= varbuffer){ %>
                      <span class="time"><a class="disable" href="/"><%= varbuffer %></a></span>
                      <% }else{ %>
                        <span class="time"><a class="able" href="/bookingmovies/<%= moviesDetial.movieName %>/<%= moviesDetial.branchName %>/<%= S3D.theaterID%>/<%= varbuffer%>/<%= S3D.movieShowtimeID%>/3D/<%= S3D.audio%>/select"><%= varbuffer%></a></span>
                        <% } %>
                    <% }); %>
                  </div>
                <% } %>


                <% if(S4Ds != '' ){ %>
                  <div class="col theater-showtime">
                    <span class="theater">4DX</span>
                    <% S4Ds.forEach(function(S4D){ %>
                      <% varbuffer =  S4D.showtime.toTimeString() %>
                      <% varbuffer =  varbuffer.split(' ')[0]%>
                      <% if(currentTime >= varbuffer){ %>
                      <span class="time"><a class="disable" href="/"><%= varbuffer %></a></span>
                      <% }else{ %>
                        <span class="time"><a class="able" href="/bookingmovies/<%= moviesDetial.movieName %>/<%= moviesDetial.branchName %>/<%= S4D.theaterID%>/<%= varbuffer%>/<%= S4D.movieShowtimeID%>/4DX/<%= S4D.audio%>/select"><%= varbuffer%></a></span>
                      <% } %>
                    <% }); %>
                  </div>
                <% } %>


                <% if(SIMAX != '' ){ %>
                  <div class="col theater-showtime">
                    <span class="theater">IMAX</span>
                    <% SIMAX.forEach(function(IMAX){ %>
                      <% varbuffer =  IMAX.showtime.toTimeString() %>
                      <% varbuffer =  varbuffer.split(' ')[0]%>
                      <% if(currentTime >= varbuffer){ %>
                      <span class="time"><a class="disable" href="/"><%= varbuffer %></a></span>
                      <% }else{ %>
                        <span class="time"><a class="able" href="/bookingmovies/<%= moviesDetial.movieName %>/<%= moviesDetial.branchName %>/<%= IMAX.theaterID%>/<%= varbuffer%>/<%= IMAX.movieShowtimeID%>/IMAX/<%= IMAX.audio%>/select"><%= varbuffer%></a></span>
                      <% } %>
                    <% }); %>
                  </div>
                <% } %>



              </div>
              <div class="col"></div>
            </div>
          </div>
        </div>
      </article>
      <article id="nextday">
        <div class="row"></div>
      </article>
    </section>
  </div>
</div>
