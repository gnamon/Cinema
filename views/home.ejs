  <!-- search section -->
  <div class="container-fluid">
    <div class="row">
      <!-- <form action="/searchMovie" method="post"> -->
        <div class="col-5">

          <select class="selectpicker form-control-sm" title="Find All Movies" data-live-search="true" data-width="42%" data-style="btn-dark" name="SearchMovie" >
            <% movies.forEach(function(movie){ %>
              <option class="opt-style" value="<%=movie.movieID%>"><%=movie.movieName%></option>
