                <ul class = "navbar-nav ml-auto">
                    <li class = "nav-item"><a href="#" class="nav-link">Welcome <%= currentAdmin %></a></li>
                    <li class = "nav-item"><a href="/adminLogout" class="nav-link">logout</a></li>
                </ul>
            </div>
        </div> 
    </nav>  

    <div class="container-fluid">
        <form method="post">
            <div class="branch-form">
                <div class="branch-form__inner">
                    <h4>Edit Theater</h4>
                    <div class="branch-input">
                        <label class="branch-input__label">Theather Type</label>
                        <input list="ttype" name="theaterTypeID" class="branch-input__input" value="<%=data.theaterTypeID %>" />
                        <datalist id="ttype">
                            <% tData.forEach(function(t){ %>
                            <option value="<%=t.theaterTypeID%>"><%=t.TheaterTypeName %></option>
                            <% }); %> 
                        </datalist>
                    </div>
                    <div class="branch-input">
                        <label class="branch-input__label">Theather No.</label>
                        <input name="theaterNo" class="branch-input__input" value="<%=data.theaterNo %>"/>
                    </div>
                    <div class="branch-input">
                        <label class="branch-input__label">Branch</label>
                        <input type="text" list="branchName" name="branchID" class="branch-input__input" value="<%=data.branchID %>"/>
                        <datalist id="branchName">
                            <% bData.forEach(function(b){ %>
                            <option value="<%=b.branchID%>"><%=b.branchName%></option>
                            <% }); %> 
                        </datalist>
                    </div>
                    
                    <div>
                        <button class="cancel-btn"><a href="/theaterdata">cancel</a></button>
                        <button class="save-btn" onclick="saveForm()">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</html>
