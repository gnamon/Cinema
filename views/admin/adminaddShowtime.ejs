<body>
    <form action="/adminaddShowtime" method="post">
        <div class="container-fluid">
            <div class="seat-form">
                <div class="seat-form__inner">
                    <h4>add showtime</h4>
                    <div class="seatprice-input">
                        <label for="branch" class="seatprice-input__label">movie</label>
                        <select name="movie" required>
                            <option value="">- Please select movie -</option>
                            <% movies.forEach(function(movie){ %>
                                <option value="<%=movie.movieID%>"><%=movie.movieName%></option>
                            <% }); %> 
                        </select>
                    </div>
                    <div class="seatprice__row">
                        <label for="theatertype" class="seatprice-input__label">Theater</label>
                        <select name="theather" required>
                            <option value="">- Please select Theather  -</option>
                            <% theaters.forEach(function(Theater){ %>
                                <option value="<%=Theater.theaterID%>"><%=Theater.theaterID%></option>
                            <% }); %> 
                        </select>
                    <br><br><br>
                    <div class="seatprice-input">
                        <label for="price" class="seatprice-input__label">Show time (YYYY-MM-DD HH:MM)</label>
                        <input type="text" id="branchName" name="showtime" class="seatprice-input__input">
                    </div>
            
            
                    <div class="seatprice-input">
                        <label for="price" class="seatprice-input__label">audio</label>
                        <input type="text" id="branchName" name="audio" class="seatprice-input__input">
                    </div>

                    <div>
                        <button class="cancel-btn"><a href="/manageAdmin">cancel</a></button>
                        <button class="save-btn" onclick="saveForm()">Save</button>
                    </div>
            
